<h1><%= @movie.title %></h1>(<%= link_to 'back', new_movie_path  %>)

<%= form_for @rental, :url=> {:action => :create, :id => @movie.id}  do |f| %>
	<table align=center style="border-collapse: separate; border-spacing: 8px; ">
		<tr>
			<th  >Borrowed On</th>
			<th  >Returned On</th>
		</tr>
		<tr>
			<td><%= f.date_select :borrowed_on %></td>
			<td><%= f.date_select :returned_on %></td>
		</tr>
		<tr >
			<td align=center colspan=2 ><%= f.submit %></td>
		</tr>	
		
	</table>

<% end %>

<% if @movie.rentals.exists? %>
	<table class="table">
		<th>Borrowed On</th>
		<th>Returned On</th>
		<% for rental in @movie.rentals %>
			<tr>
				<td><%= rental.borrowed_on %></td>
				<td><%= rental.returned_on %></td>
			</tr>
		<% end %>
	</table>
<% else %>
	<%= 'No Rental Yet' %>
<% end %>


